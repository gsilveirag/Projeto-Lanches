@model CarrinhoCompraViewModel


<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <img src="/imagens/carrinho-de-compras.jpg " alt="" width="30" height="24" class="d-inline-block align-text-top">
      Carrinho de Compras
    </a>
  </div>
</nav>

<div class="container">
<div class="row">

	<br />

	 <table class="table table-bordered table-striped">
		 <thead>
			 <tr>
				 <th>Quantidade</th>
				 <th>Lanche</th>
				 <th>Preco</th>
				 <th>Subtotal</th>
			 </tr>
		 </thead>

		 <tbody>
			 @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems)
			 {
				 <tr>
					 <td class="text-center">@item.Quantidade</td>
					 <td class="text-left">@item.Lanche.Nome</td>
					 <td class="text-right">@item.Lanche.Preco.ToString("c")</td>
					 <td class="text-right">@((item.Quantidade * item.Lanche.Preco).ToString("c"))</td>
					 <td class="text-center"><a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra"
						 asp-route-lancheId="@item.Lanche.LancheId"> <img src="/imagens/lixeira.png " /> </a>
						 </td>

				 </tr>
			 }
		 </tbody>
		 <tfoot>
			 <tr>
				 <td colspan="3" class="text-end">Total:</td>
				 <td class="text-end">@Model.CarrinhoCompraTotal.ToString("c")</td>
			 </tr>
		 </tfoot>
	 </table>

	 <div class="text-end">
		 <div class="btn-group">
			 <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
			 &nbsp;&nbsp;&nbsp;
			  <a class="btn btn-primary" asp-controller="Lanche" asp-action="List">Continuar Comprando</a>
		 </div>
	 </div>
	 <br/>


</div>
</div>